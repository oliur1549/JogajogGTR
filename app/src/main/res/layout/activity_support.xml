                            android:textStyle="bold"
                            android:text="Phone :"/>

                        <EditText
                            android:id="@+id/contactPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:hint="+880171234567"
                            android:maxLength="13"
                            />

                    </LinearLayout>
