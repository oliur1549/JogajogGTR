                            android:id="@+id/purposeNameShort"
                            android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

