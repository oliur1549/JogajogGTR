<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/chat_row_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/companyPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_picture"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp" />

    <TextView
        android:id="@+id/companyName"
        android:layout_toEndOf="@id/companyPhoto"
        android:layout_toStartOf="@id/lastContactDate"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:text="Robert Downey"
        android:fontFamily="@font/brownbold"
        android:textSize="15sp"

        android:layout_toRightOf="@id/companyPhoto"
        android:layout_toLeftOf="@id/lastContactDate" />

    <TextView
        android:id="@+id/companyPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyName"
        android:layout_toEndOf="@id/companyPhoto"
        android:text="Okay, Bye."
        android:ellipsize="end"
        android:layout_marginEnd="6dp"
        android:maxLines="2"
        android:fontFamily="@font/lexenddeca"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/companyPhoto"
        android:layout_marginRight="6dp" />


    <TextView
        android:id="@+id/lastContactDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:text="Yesterday"
        android:layout_alignTop="@id/companyName"
        android:layout_alignParentRight="true" />
    <ImageButton
        android:id="@+id/telephone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/phone_call_icon_latest"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_alignEnd="@+id/lastContactDate"
        android:layout_alignRight="@+id/lastContactDate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginStart="62dp"
        android:layout_below="@id/companyPhoto"
        android:layout_marginLeft="62dp" />



</RelativeLayout>
